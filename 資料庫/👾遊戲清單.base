filters:
  and:
    - file.inFolder("資料庫/👾遊戲清單")
views:
  - type: table
    name: 表格
    order:
      - file.basename
      - 平台
      - 位置
      - 型態
      - 封面
      - 遊玩狀態
      - icon
      - tags
    sort:
      - property: 平台
        direction: DESC
    columnSize:
      file.basename: 322
      note.平台: 171
  - type: cards
    name: 檢視
    image: note.封面
    imageFit: contain
    cardSize: 270
  - type: cards
    name: 檢視 2
    image: note.icon
    imageAspectRatio: 0.75
    imageFit: contain
    cardSize: 190
