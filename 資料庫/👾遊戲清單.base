filters:
  and:
    - file.inFolder("資料庫/👾遊戲清單")
views:
  - type: table
    name: 表格
    order:
      - file.basename
      - 平台
      - 位置
      - 型態
      - 封面
      - 遊玩狀態
      - icon
      - tags
    sort:
      - property: 平台
        direction: DESC
    columnSize:
      file.basename: 322
      note.平台: 171
      note.icon: 198
  - type: cards
    name: 卡片(封面)
    image: note.封面
    imageFit: contain
    cardSize: 190
    imageAspectRatio: 1.5
  - type: cards
    name: 卡片(icon)
    image: note.icon
    imageAspectRatio: 1
    imageFit: contain
    cardSize: 190
